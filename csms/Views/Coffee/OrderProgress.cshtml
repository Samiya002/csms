@model IEnumerable<csms.Models.Order>

@{
    ViewData["Title"] = "Order Progress";
}

<h1>Your Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Items</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td>@order.Status</td>
                <td>
                    <ul>
                        @foreach (var item in order.OrderItems)
                        {
                            <li>@item.Coffee.Name - @item.Quantity</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>